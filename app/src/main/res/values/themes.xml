<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Aurora" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="RegisterLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="RegisterInputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/input_hint_color</item>
    </style>

    <style name="ShapeAppearance.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ESTA ES LA VERSIÃ“N CORRECTA Y DEFINITIVA -->
    <style name="App.Material.BottomNav.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <!-- 1. Ancho del indicador (ajusta si es necesario) -->
        <item name="android:width">48dp</item>
        <!-- 2. Alto del indicador (ajusta si es necesario) -->
        <item name="android:height">48dp</item>
        <!-- 3. Color del indicador -->
        <item name="android:color">@color/magenta</item>
    </style>



    <style name="Theme.Aurora" parent="Base.Theme.Aurora" />
</resources>