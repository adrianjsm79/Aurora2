<?xml version="1.0" encoding="utf-8"?>
<!-- Usamos un layer-list para simular el borde con gradiente -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- El color de fondo sólido para el interior de la tarjeta -->
            <solid android:color="@color/background_secondary" />
            <!-- Las esquinas deben ser un poco menos redondeadas para un ajuste perfecto, -->
            <!-- pero con 15dp suele ser suficiente. Ajústalo si es necesario. -->
            <corners android:radius="20dp" /> <!-- 15dp (radio exterior) - 2dp (grosor) -->
        </shape>
    </item>

</layer-list>
