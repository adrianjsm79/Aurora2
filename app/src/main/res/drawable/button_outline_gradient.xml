<?xml version="1.0" encoding="utf-8"?>
<!-- Usamos un layer-list para simular el borde con gradiente -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1. Capa de Fondo (El Borde con Gradiente) -->
    <!-- Esta forma es el gradiente completo que se verá en los bordes. -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- Radio del contenedor exterior -->
            <gradient
                android:startColor="@color/turquesa"
                android:endColor="@color/magenta"
                android:angle="0"
                />
        </shape>
    </item>

    <!-- 2. Capa Frontal (El Relleno SÓLIDO del Botón) -->
    <!-- Esta forma se dibuja encima, dejando un margen de 2dp que actúa como borde. -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <!-- ===== ¡AQUÍ ESTÁ LA CORRECCIÓN! ===== -->
            <!-- Cambiamos el color transparente por el color de fondo deseado para el botón. -->
            <solid android:color="?attr/colorSurface" />

            <corners android:radius="28dp" /> <!-- Radio ligeramente menor para un ajuste perfecto -->
        </shape>
    </item>

</layer-list>
