<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">  <!-- Color del brillo/onda. Un blanco translúcido funciona genial -->

    <!-- Este es el fondo normal del botón (cuando no está presionado) -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="30dp"/> <!-- Es importante que el radio coincida con tu fondo -->
        </shape>
    </item>

    <!-- Este es el fondo visible del botón -->
    <item android:drawable="@drawable/button_outline_default" />

</ripple>
