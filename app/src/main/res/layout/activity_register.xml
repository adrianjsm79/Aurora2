<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:fillViewport="true"
    tools:context=".ui.activities.RegisterActivity"
    android:layout_marginHorizontal="34dp"
    android:layout_marginVertical="52dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="44dp"
        android:background="@drawable/button_outline_gradient"
        android:fontFamily="@font/k2d_regular"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Icono de registro"
            android:padding="20dp"
            android:src="@drawable/ic_person"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/text_title_aurora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/k2d_regular"
            android:text="Crear Cuenta"
            android:textColor="?attr/colorPrimary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Únete a Aurora"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label_nombre"
            style="@style/RegisterLabel"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:text="Nombre Completo" />

        <EditText
            android:id="@+id/input_nombre"
            style="@style/RegisterInputField"
            android:layout_width="match_parent"
            android:hint="Juan Pérez"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/label_correo"
            style="@style/RegisterLabel"
            android:layout_width="match_parent"
            android:text="Email" />

        <EditText
            android:id="@+id/input_correo"
            style="@style/RegisterInputField"
            android:layout_width="match_parent"
            android:hint="tu@email.com"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/label_celular"
            style="@style/RegisterLabel"
            android:layout_width="match_parent"
            android:text="Número de Teléfono" />

        <!-- LinearLayout anidado para la fila del teléfono -->
        <LinearLayout
            android:id="@+id/phone_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_contentColor="?attr/colorOnSurface"
                app:ccp_defaultNameCode="PE"
                app:ccp_showFlag="true"
                app:ccp_showFullName="false"
                app:ccp_showNameCode="false" />

            <EditText
                android:id="@+id/input_celular"
                style="@style/RegisterInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="987654321"
                android:inputType="phone" />

        </LinearLayout>

        <TextView
            android:id="@+id/label_password"
            style="@style/RegisterLabel"
            android:layout_width="match_parent"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/input_password"
            style="@style/RegisterInputField"
            android:layout_width="match_parent"
            android:hint="********"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/label_confirm_password"
            style="@style/RegisterLabel"
            android:layout_width="match_parent"
            android:text="Confirmar Contraseña" />

        <EditText
            android:id="@+id/input_confirm_password"
            style="@style/RegisterInputField"
            android:layout_width="match_parent"
            android:hint="********"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_fillgradient_ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="14dp"
            android:text="Registrarse"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <!-- LinearLayout para el texto final -->
        <LinearLayout
            android:id="@+id/login_prompt_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes cuenta? "
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia sesión aquí"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
