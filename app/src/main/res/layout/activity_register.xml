<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.activities.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="34dp"
            android:layout_marginVertical="54dp"
            android:background="@drawable/register_card_background"
            android:padding="34dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/gradient_background"
                android:padding="20dp"
                android:src="@drawable/ic_person"
                app:layout_constraintEnd_toEndOf ="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"
                android:contentDescription="Icono de registro" />

            <TextView
                android:id="@+id/text_title_aurora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/k2d_regular"
                android:text="Crear Cuenta"
                android:textColor="?attr/colorPrimary"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo" />

            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Únete a Aurora"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_title_aurora" />

            <TextView
                android:id="@+id/label_nombre"
                style="@style/RegisterLabel"
                android:layout_marginTop="24dp"
                android:text="Nombre Completo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_subtitle" />

            <EditText
                android:id="@+id/input_nombre"
                style="@style/RegisterInputField"
                android:hint="Juan Pérez"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@+id/label_nombre" 
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/label_correo"
                style="@style/RegisterLabel"
                android:text="Email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_nombre" />

            <EditText
                android:id="@+id/input_correo"
                style="@style/RegisterInputField"
                android:hint="tu@email.com"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toBottomOf="@+id/label_correo"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/label_celular"
                style="@style/RegisterLabel"
                android:text="Número de Teléfono"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_correo"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:id="@+id/phone_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/label_celular">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="PE"
                    app:ccp_showFlag="true"
                    app:ccp_showNameCode="false"
                    app:ccp_showFullName="false"
                    app:ccp_contentColor="?attr/colorOnSurface"/>

                <EditText
                    android:id="@+id/input_celular"
                    style="@style/RegisterInputField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="987654321"
                    android:inputType="phone" />

            </LinearLayout>

            <TextView
                android:id="@+id/label_password"
                style="@style/RegisterLabel"
                android:text="Contraseña"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_input_container" />

            <EditText
                android:id="@+id/input_password"
                style="@style/RegisterInputField"
                android:hint="********"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@+id/label_password"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/label_confirm_password"
                style="@style/RegisterLabel"
                android:text="Confirmar Contraseña"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_password" />

            <EditText
                android:id="@+id/input_confirm_password"
                style="@style/RegisterInputField"
                android:hint="********"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@+id/label_confirm_password"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btn_create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_fillgradient_ripple_effect"
                android:clickable="true"
                android:focusable="true"
                android:paddingVertical="14dp"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@+id/input_confirm_password" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_create_account">

                <TextView
                    android:id="@+id/account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Ya tienes cuenta? "
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/login_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicia sesión aquí"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>