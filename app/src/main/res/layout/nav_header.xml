<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Avatar (CÃ­rculo) -->
    <ImageView
        android:id="@+id/image_profile_nav"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_person"
        android:background="@drawable/circle_white_background"
        android:padding="7dp"
        app:tint="?attr/colorPrimary"
        android:contentDescription="Avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_username_nav"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/text_username_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando..."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/k2d_bold"
        app:layout_constraintBottom_toTopOf="@id/text_email_nav"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_email_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="usuario@aurora.com"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        android:fontFamily="@font/k2d_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>