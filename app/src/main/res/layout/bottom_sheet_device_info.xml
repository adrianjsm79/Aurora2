<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:paddingBottom="24dp">

    <!-- Manija de arrastre -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_drag_handle"
        android:backgroundTint="#DDDDDD"/>

    <!-- Título: Nombre del Dispositivo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_white_background"
            android:backgroundTint="?attr/colorPrimaryContainer">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_phone"
                app:tint="?attr/colorPrimary"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/sheet_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung S21"
                android:textSize="20sp"
                android:fontFamily="@font/k2d_bold"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/sheet_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: xiaomi_123..."
                android:textSize="12sp"
                android:fontFamily="@font/k2d_regular"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Detalle 1: Propietario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            app:tint="?attr/colorOnSurfaceVariant"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Propietario"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
            <TextView
                android:id="@+id/sheet_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tú (Este dispositivo)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Detalle 2: Última vez visto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_access_time"
            app:tint="?attr/colorOnSurfaceVariant"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Última conexión"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
            <TextView
                android:id="@+id/sheet_last_seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hace 5 min"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Detalle 3: Precisión GPS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location"
            app:tint="?attr/colorOnSurfaceVariant"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precisión GPS"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
            <TextView
                android:id="@+id/sheet_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta (10 metros)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Botón Cerrar -->
    <Button
        android:id="@+id/btn_close_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Cerrar"
        style="@style/Widget.Material3.Button.TonalButton"/>

</LinearLayout>