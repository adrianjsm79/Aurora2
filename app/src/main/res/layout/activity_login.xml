<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:fillViewport="true"
    tools:context=".ui.activities.LoginActivity"
    android:layout_marginHorizontal="34dp"
    android:layout_marginVertical="52dp"
    >

    <!-- Tarjeta de Login usando LinearLayout para simplicidad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/button_outline_gradient"
        android:padding="44dp"
        android:fontFamily="@font/k2d_regular">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Icono de Aurora"
            android:padding="15dp"
            android:src="@drawable/ic_location"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/text_title_aurora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/k2d_regular"
            android:text="Aurora"
            android:textColor="?attr/colorPrimary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Inicia sesión para continuar"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label_email"
            style="@style/RegisterLabel"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:text="Email"
            android:textColor="?attr/colorOnSurface" />

        <EditText
            android:id="@+id/input_email"
            style="@style/RegisterInputField"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="tu@email.com"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/label_password"
            style="@style/RegisterLabel"
            android:layout_width="match_parent"
            android:text="Contraseña"
            android:textColor="?attr/colorOnSurface" />

        <EditText
            android:id="@+id/input_password"
            style="@style/RegisterInputField"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="********"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_fillgradient_ripple_effect"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/k2d_bold"
            android:paddingVertical="14dp"
            android:text="Iniciar Sesión"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No tienes cuenta? "
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/register_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regístrate aquí"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
