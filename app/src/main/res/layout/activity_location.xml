<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/android:colorBackground"
    tools:context=".ui.activities.LocationActivity">

    <!-- 1. Toolbar para volver atrás -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="Configuración de Ubicación" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 2. Switch Principal de Activación -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_tracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:text="Activar Rastreo en Tiempo Real"
                android:textSize="18sp"
                android:fontFamily="@font/k2d_bold"
                android:textColor="?attr/colorOnBackground"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Permite que Aurora envíe tu ubicación en segundo plano para protegerte. Esto mostrará una notificación persistente."
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="#555" />

            <!-- 3. Otras Configuraciones -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intervalo de Actualización"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Qué tan seguido debe enviarse la ubicación. Un intervalo menor gasta más batería."
                android:textSize="14sp" />

            <!-- 4. RadioGroup para el intervalo -->
            <RadioGroup
                android:id="@+id/radio_group_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/radio_10s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alta Precisión (Cada 10 segundos)" />

                <RadioButton
                    android:id="@+id/radio_30s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balanceado (Cada 30 segundos)" />

                <RadioButton
                    android:id="@+id/radio_60s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahorro de Batería (Cada 60 segundos)" />
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

</LinearLayout>