<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:elevation="4dp"
    app:strokeWidth="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"> <!-- Añadimos un padding inferior general -->

        <!-- SECCIÓN PRINCIPAL (Visible siempre) -->
        <ImageView
            android:id="@+id/icon_device_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnBackground" />

        <TextView
            android:id="@+id/text_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/icon_expand_arrow"
            app:layout_constraintStart_toEndOf="@id/icon_device_type"
            app:layout_constraintTop_toTopOf="@id/icon_device_type"
            tools:text="Pixel 6 Pro de Adrian" />

        <TextView
            android:id="@+id/text_device_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.7"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="@id/text_device_name"
            app:layout_constraintStart_toStartOf="@id/text_device_name"
            app:layout_constraintTop_toBottomOf="@id/text_device_name"
            tools:text="Vinculado el 21/10/2025" />

        <ImageView
            android:id="@+id/icon_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/icon_device_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_device_type"
            app:tint="?attr/colorPrimary" />


        <!-- SECCIÓN EXPANDIBLE (Oculta por defecto) -->
        <!-- La constraint ahora apunta al text_device_status para pegarse a él -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandable_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_device_status"
            tools:visibility="visible">

            <!-- El resto del layout expandible no necesita cambios -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:alpha="0.2"
                android:background="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Información del dispositivo -->
            <TextView
                android:id="@+id/label_last_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Última ubicación:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

            <TextView
                android:id="@+id/text_last_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Hace 5 minutos"
                app:layout_constraintBaseline_toBaselineOf="@id/label_last_location"
                app:layout_constraintStart_toEndOf="@id/label_last_location"
                tools:text="Av. Arequipa 123, Lima" />

            <TextView
                android:id="@+id/label_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Batería:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_last_location" />

            <TextView
                android:id="@+id/text_battery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="85%"
                app:layout_constraintBaseline_toBaselineOf="@id/label_battery"
                app:layout_constraintStart_toEndOf="@id/label_battery"
                tools:text="85%" />

            <!-- Opciones -->
            <TextView
                android:id="@+id/option_locate"
                style="@style/DeviceOptionStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Localizar dispositivo"
                app:drawableStartCompat="@drawable/ic_location"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_battery" />

            <TextView
                android:id="@+id/option_visibility"
                style="@style/DeviceOptionStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Activar visibilidad para contactos"
                app:drawableStartCompat="@drawable/ic_visibility_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/option_locate" />

            <TextView
                android:id="@+id/option_edit_name"
                style="@style/DeviceOptionStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Editar nombre"
                app:drawableStartCompat="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/option_visibility" />

            <TextView
                android:id="@+id/option_unlink"
                style="@style/DeviceOptionStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Desvincular dispositivo"
                android:textColor="@android:color/holo_red_light"
                app:drawableStartCompat="@drawable/ic_link_off"
                app:drawableTint="@android:color/holo_red_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/option_edit_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
