<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para notificaciÃ³n expandida de rastreo activo -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            >

            <ImageView
                android:id="@+id/tracking_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_location"
                android:contentDescription="Rastreo activo"
                android:padding="4dp"

                />
        </FrameLayout>
        <TextView
            android:id="@+id/notification_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rastreo de dispositivo activo"
            android:textColor="@color/turquesa"
            android:fontFamily="@font/k2d_regular"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_stop"
            android:contentDescription="Detener rastreo"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="70dp"
            android:background="?attr/selectableItemBackground"
            app:tint="@color/red_error"
            />
    </LinearLayout>

</LinearLayout>